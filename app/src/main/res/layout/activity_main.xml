<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <TextView
        android:id="@+id/main_text_pillgood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="626dp"
        android:text="PillGood"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="296dp" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="sample_list_01"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="sample_list_02"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="sample_list_03" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="sample_list_04"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/main_my_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/baseline_person_24"
        android:backgroundTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/main_my_button"
        android:src="@drawable/baseline_menu_24"
        android:backgroundTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_camera_button"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/baseline_camera_24"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_home_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/baseline_home_24"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_calender_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/main_home_button"
        android:src="@drawable/baseline_calendar_month_24"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_catbot_button"
        android:layout_width="115dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="480dp"
        android:src="@drawable/bot"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageButton
        android:id="@+id/main_QR_button"
        android:layout_width="154dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="480dp"
        android:layout_toStartOf="@+id/main_catbot_button"
        tools:ignore="SpeakableTextPresentCheck"
        android:src="@drawable/qr_button" />


</RelativeLayout>